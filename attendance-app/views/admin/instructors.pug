extends ../layouts/dashboard

block pageActions
    div.btn-list
        a.btn.d-none.d-sm-inline(href=`/admin/users/import/instructors`)
            | Import Instructors

        a.btn.btn-primary.d-none.d-sm-inline-block(href="/admin/users/add/instructor")
            i.ti.ti-plus.me-1 
            | Create new instructor 

block pageContent
    if data.instructors.length != 0 
        div.container-xl
            div.card
                div.card-body
                    div.table-responsive#table-default
                        table.table
                            thead 
                                tr 
                                    th Instructor ID
                                    th Full Name 
                                    th Email
                                    th Actions
                            tbody.table-tbody
                                for instructor in data.instructors
                                    tr
                                        td= instructor.instructorId
                                        td= instructor.user.fullName
                                        td= instructor.user.email
                                        td
                                            a.btn.btn-primary.btn-sm.me-2(href=`/admin/instructors/${instructor.id}`)
                                                i.ti.ti-eye.me-1
                                                | View
                                            a.btn.btn-success.btn-sm(href=`/admin/users/edit/${instructor.user.id}`)
                                                i.ti.ti-pencil.me-1
                                                | Edit
    else
        include ../layouts/empty


    