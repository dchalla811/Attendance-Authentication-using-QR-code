extends ./layouts/page 

block pageBody 
    div.bg-body-tertiary.min-vh-100.d-flex.flex-row.align-items-center
        div.container
            div.row.justify-content-center
                div.col-md-6
                    div.clearfix
                        h1.float-start.display-3.me-4 #{error.status}
                        h4.pt-3 #{message}
                    if error.stack
                        pre 
                            code #{error.stack}
                    